<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jmather.rorc.raleighproject.sendEmail"
    android:background="@drawable/backgrounddash">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email To Send"
        android:id="@+id/emailtosendlabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Boss&apos;s Email"
        android:id="@+id/bossemaillabel"
        android:layout_below="@+id/emailtosendlabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Email"
        android:id="@+id/youremaillabe"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/bossemaillabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Mileage"
        android:id="@+id/totalmileaglelabel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Name"
        android:id="@+id/namelabel"
        android:layout_below="@+id/youremaillabe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/name"
        android:layout_above="@+id/totalmileaglelabel"
        android:layout_alignRight="@+id/bossemaillabel"
        android:layout_alignEnd="@+id/bossemaillabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/senderemail"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/bossemail"
        android:layout_below="@+id/bossemaillabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/mileagetotal"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/namelabel"
        android:layout_alignEnd="@+id/namelabel"
        android:layout_marginBottom="32dp"
        android:text="920" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Email"
        android:id="@+id/sendbutton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/totalmileaglelabel"
        android:layout_toEndOf="@+id/totalmileaglelabel"
        android:clickable="true"
        android:onClick="sendemail"/>

</RelativeLayout>
