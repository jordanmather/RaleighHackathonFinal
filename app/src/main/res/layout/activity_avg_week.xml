<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.barnbuilders.nicholaslargen.mycommute.AvgWeek"
    android:background="@drawable/backgrounddash"
    android:id="@+id/weekAM">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This Week"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4/13/15 - 4/19/15"
        android:id="@+id/date"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time Driven this Week:"
        android:id="@+id/weeklyTime"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Miles Driven this Week"
        android:id="@+id/weeklymileage"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/weeklyTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Avg Weekly Speed:"
        android:id="@+id/avgweeklyspeed"
        android:layout_below="@+id/weeklymileage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16 hours"
        android:id="@+id/weekAT"
        android:layout_alignBottom="@+id/weeklyTime"
        android:layout_alignLeft="@+id/weekAS"
        android:layout_alignStart="@+id/weekAS" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="920"
        android:id="@+id/weekAD"
        android:layout_alignBottom="@+id/weeklymileage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/weeklymileage"
        android:layout_alignLeft="@+id/weekAT"
        android:layout_alignStart="@+id/weekAT" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="57.5 mph"
        android:id="@+id/weekAS"
        android:layout_alignBottom="@+id/avgweeklyspeed"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendemail"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/weekAT"
        android:layout_alignEnd="@+id/weekAT"
        android:text="Email"
        android:clickable="true"
        android:onClick="sendemail"/>

</RelativeLayout>
